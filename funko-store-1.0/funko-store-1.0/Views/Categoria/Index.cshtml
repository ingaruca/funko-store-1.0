@model IEnumerable<funko_store_1._0.Models.tb_categorias>

@{
    ViewBag.Title = "Index";
    var activado = "";
}

<h2>Lista de Categorias</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", "", new { @class = "btn btn-success" })
</p>
<div class="table-responsive-sm" style="max-height:300px; overflow:auto;">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Estado
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idcate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nomcate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estado)
                        @if (item.estado == "A")
                        {
                            activado = "Desactivar";
                        }
                        else
                        {
                            activado = "Activar";
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.idcate }) |
                        @*@Html.ActionLink("Details", "Details", new {  id=item.idcate }) |*@
                        @Html.ActionLink(@activado, "Desactivar", new { id = item.idcate })
                    </td>
                </tr>
            }
        </tbody>
</table>
</div>