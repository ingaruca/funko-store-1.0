@model IEnumerable<funko_store_1._0.Models.tb_categorias>

@{
    ViewBag.Title = "Index";
    var activado = "";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idcate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomcate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idcate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomcate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
            @if(item.estado == "A")
            {
                activado = "Desactivar";
            }else{
                activado = "Activar";
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.idcate  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.idcate }) |
            @Html.ActionLink(@activado, "Desactivar", new {  id=item.idcate })
        </td>
    </tr>
}

</table>
