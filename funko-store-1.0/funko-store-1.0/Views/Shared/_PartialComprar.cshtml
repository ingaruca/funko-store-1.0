@model IEnumerable<funko_store_1._0.Models.Registro>

<div class="row">
    <main class="col-sm-9">

        <div class="card">
            <table class="table table-hover shopping-cart-wrap">
                <thead class="text-muted">
                    <tr>
                        <th scope="col">Producto</th>
                        <th scope="col" width="120">Cantidad</th>
                        <th scope="col" width="120">Precio</th>
                        <th scope="col" class="text-right" width="200">Acci&oacute;n</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var reg in Model)
                {
                    <tr>
                        <td>
                            <figure class="media">
                                <div class="img-wrap"><img src=@Url.Content(string.Format("../imagenes/{0}.png",@reg.id)) class="img-thumbnail img-sm"></div>
                                <figcaption class="media-body">
                                    <h6 class="title text-truncate">@reg.nombre </h6>
                                    <dl class="dlist-inline small">
                                        <dt>C&oacute;digo: </dt>
                                        <dd>@reg.id</dd>
                                    </dl>
                                </figcaption>
                            </figure>
                        </td>
                        <td>
                            @reg.cantidad
                        </td>
                        <td>
                            <div class="price-wrap">
                                <var class="price">S/ @reg.monto</var>
                                <small class="text-muted">(S/@reg.precio cada uno)</small>
                            </div> <!-- price-wrap .// -->
                        </td>
                        <td class="text-right">
                            <a data-original-title="Save to Wishlist" title="" href="" class="btn btn-outline-success"
                               data-toggle="tooltip"><i class="fa fa-heart"></i></a>
                            @Html.ActionLink("Eliminar", "Eliminar", new { id = @reg.id }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div> <!-- card.// -->

    </main> <!-- col.// -->
</div>