@using funko_store_1._0.Models;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Funko Store 1.0</title>
    <!-- jQuery -->
    <script src="~/Scripts/jquery-2.0.0.min.js" type="text/javascript"></script>
    <!-- Bootstrap4 files-->
    <script src="~/Scripts/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- Font awesome 5 -->
    <link href="~/fonts/fontawesome/css/fontawesome-all.min.css" type="text/css" rel="stylesheet">
    <!-- custom style -->
    <link href="~/Content/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/responsive.css" rel="stylesheet" media="only screen and (max-width: 1200px)" />
    <!-- custom javascript -->
    <script src="~/Scripts/script.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</head>
<body>
    <header class="section-header">
        <nav class="navbar navbar-top navbar-expand-lg navbar-dark bg-secondary">
            <div class="container">
                @Html.ActionLink("Funko Store", "Index", "Funko", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Funko", new { id = "" }, new { @class = "nav-link" })</li>
                        @*<li class="nav-item">@Html.ActionLink("Acerca de", "About", "Home")</li>
                            <li class="nav-item">@Html.ActionLink("Contacto", "Contact", "Home")</li>*@
                        @if (Session["usuario"] != null)
                        {
                            UsuarioSesion usu = (UsuarioSesion)Session["usuario"];

                            if (usu.tipo == "ADMIN")
                            {
                                <li class="nav-item">@Html.ActionLink("Categorias", "Index", "Categoria", new { id = "" }, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Productos", "Index", "Producto", new { id = "" }, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Usuarios", "Index", "Usuario", new { id = "" }, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Pedidos", "Index", "Pedidos", new { id = "" }, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Reportes", "Index", "Reporte", new { id = "" }, new { @class = "nav-link" })</li>
                            }
                            else
                            {
                                <li class="nav-item">@Html.ActionLink("Pedidos", "Index", "Pedidos", new { id = "" }, new { @class = "nav-link" })</li>
                            }
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div> <!-- container //  -->
        </nav>
    </header> <!-- section-header.// -->
    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content bg padding-y">
        <div class="container">
            @RenderBody()
        </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Funko Store 1.0</p>
    </footer>
    <!--</div>-->
</body>
</html>
